<div class="container">
  <div class="row bg-light p-5">
    <div class="col-4 text-center">
      <h3>User</h3>
      <div class='border bg-white mt-5 mx-md-5 p-2'><%= @user_count %></div>
    </div>
    <div class="col-4 text-center">
      <h3>Posts</h3>
      <div class='border bg-white mt-5 mx-md-5 p-2'><%= @post_count %></div>
    </div>
    <div class="col-4 text-center">
      <h3>Replies</h3>
      <div class='border bg-white mt-5 mx-md-5 p-2'><%= @reply_count %></div>
    </div>
  </div>
  <div class="row p-5">
    <div class="col-md-6">
      <h3 class="text-center">Chatterbox</h3>
      <hr>
        <ol>
          <% @chatter_user.each do |user| %>
            <li><%= link_to user.name,user_path(user)%>: <%= user.replies_count %></li>
          <%end%>
        </ol>
    </div>
    <div class="col-md-6">
      <h3 class="text-center">Most Popular Post</h3>
      <hr>
        <ol>
          <% @popular_post .each do |post| %>
            <li><%= link_to post.title, post_path(post) %>, <%=post.updated_at.strftime("%Y-%m-%d") %></li>
          <%end%>
        </ol>
    </div>
  </div>
</div>

