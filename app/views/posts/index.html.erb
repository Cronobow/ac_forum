<%= link_to "New Post", new_post_path %>
<hr>
<% @posts.each do |post| %>
<%= post.title %><br>
<%= post.description %><br>
<%= post.user.id %><br>
<%= link_to 'show', post_path(post) %> <%= link_to 'edit', edit_post_path(post) %><br>
<%= link_to 'delete', post_path(post), method: :delete, data: { confirm: "Are you sure?" } %>
<hr>
<% end %>
