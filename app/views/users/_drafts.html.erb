<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">State</th>
      <th scope="col">Last updated at</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @drafts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post_path(post) %><br>
        </td>
        <td>Draft</td>
        <td><%= post.updated_at.strftime("%Y-%m-%d")  %></td>
        <td>
          <%= link_to 'edit', post_path(post), class: "btn btn-primary" %>
          <%= link_to 'delete', post_path(post),method: :delete, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

